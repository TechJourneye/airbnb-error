<% layout("/layouts/boilerplate") %>
 <div class="row mt-3">
    <div class="col-8 offset-3">

    <h3>Listing details</h3>
    </div>

   <div class="card col-6 offset-3 show-card">
    <img src="<%=listing.image%>" class="card-img-top show-img" alt="Listing image">
  <div class="card-body">
    <p class="card-text">
        <b><%=listing.title%></b> <br>
        <%=listing.description%><br>
        &#8377; <%=listing.price.toLocaleString("en-IN")%> <br>
        <%=listing.location%><br>
        <%=listing.country%>

    </p>
  </div>
   </div>

    <br><br>
     <a href="/listing/<%=listing._id%>/edit"><button class="btn btn-dark edit-btn offset-3">Edit</button></a>
     <br><br>
     <form method="post" action="/listing/<%=listing._id%>?_method=DELETE">
      <br>
      <button class="btn btn-dark delete-btn offset-3"> Delete</button>
      <br>
     </form>

    </div>
